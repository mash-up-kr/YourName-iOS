target 'YourName' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # ⚛️ Reactive X 
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxGesture'
  pod 'RxOptional'
