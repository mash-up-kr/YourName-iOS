  # 📐 Layout
  pod 'SnapKit'

  # 🐝 Syntax Sugar
  pod 'Then'
  
  # 🐛 Debug Tool
  pod 'FLEX', :configurations => ['Debug']

  target 'YourNameTests' do
    inherit! :search_paths
    pod 'RxTest'
    pod 'RxBlocking'
    pod 'Quick'
    pod 'Nimble'
  end

end
